@page
@model RazorPagesAudio.Pages.Audios.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].Singer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].NumberOfSongs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Audio) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Singer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfSongs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
